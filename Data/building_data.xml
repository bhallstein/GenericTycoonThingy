<?xml version="1.0"?>
<!--Sample DBT buildings file in XML format-->
<building>
  <name>Barber</name>
  <buildcost>50</buildcost>
  <income>0</income>
  <upkeep>10</upkeep>
  <status>shaving</status>
  <actions>
    <action>
      <command>shave</command>
      <reponse>Barber set to Shave</response>
      <status>shaving</status>
      <minincome>5</minincome>
      <maxincome>15</maxincome>
      <upkeep>1</upkeep>
    </action>
    <action>
      <command>kill</command>
      <response>Barber set to Kill</response>
      <status>killing</status>
      <minincome>5</minincome>
      <maxincome>30</maxincome>
      <upkeep>2</upkeep>
    </action>
  </actions>
</building>

<building>
  <name>Pie Shop</name>
  <buildcost>150</buildcost>
  <income>0</income>
  <upkeep>10</upkeep>
  <status>serving Plain Pies</status>
  <actions>
    <action>
      <command>fleshpies</command>
      <reponse>Pie Shop set to serve Flesh Pies</response>
      <status>serving Flesh Pies</status>
      <minincome>8</minincome>
      <maxincome>8</maxincome>
      <upkeep>2</upkeep>
    </action>
    <action>
      <command>plainpies</command>
      <response>Pie Shop set to serve Plain Pies</response>
      <status>serving Plain Pies</status>
      <minincome>5</minincome>
      <maxincome>5</maxincome>
      <upkeep>1</upkeep>
    </action>
  </actions>
</building>